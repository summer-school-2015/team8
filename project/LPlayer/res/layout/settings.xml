<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="0.33">
        <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Play Mode"
                android:id="@+id/playmode" android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="0.33">
        <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Equalizer"
                android:id="@+id/Equalizer" android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="0.33">
        <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Info"
                android:id="@+id/info" android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>